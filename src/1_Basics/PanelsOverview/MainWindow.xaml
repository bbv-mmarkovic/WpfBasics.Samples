<Window x:Class="PanelsOverview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:panels="clr-namespace:PanelsOverview.Panels"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Grid>
        <TabControl>
            <TabItem Header="Canvas">
                <panels:CanvasControl />
            </TabItem>
            <TabItem Header="StackPanel">
                <panels:StackPanelControl />
            </TabItem>
            <TabItem Header="Grid">
                <panels:GridControl />
            </TabItem>
            <TabItem Header="WrapPanel">
                <panels:WrapPanelControl />
            </TabItem>
            <TabItem Header="DockPanel">
                <panels:DockPanelControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
