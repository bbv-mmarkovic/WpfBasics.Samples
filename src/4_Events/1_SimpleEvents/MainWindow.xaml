<Window x:Class="_1_SimpleEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="370">
    <Grid>
        <StackPanel>
            <Button Name="ExampleButton"
                    Height="30"
                    Margin="10 10 10 0"
                    Click="ExampleButton_Click"
                    Content="Event Example"
                    KeyDown="ExampleButton_KeyDown"
                    MouseDoubleClick="ExampleButton_MouseDoubleClick"
                    MouseDown="ExampleButton_MouseDown"
                    MouseEnter="ExampleButton_MouseEnter"
                    MouseLeave="ExampleButton_MouseLeave" />
            <ListBox Name="EventOutput"
                     Height="280"
                     Margin="10"
                     ScrollViewer.VerticalScrollBarVisibility="Visible" />
        </StackPanel>
    </Grid>
</Window>
