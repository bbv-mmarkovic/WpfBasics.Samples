<Window x:Class="RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RoutedEvents"
        Title="MainWindow"
        Width="525"
        Height="350">
    <Grid local:MyButtonSimple.Tap="CommonClickHandler">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:MyButtonSimple Grid.Row="0"
                              Margin="20"
                              Click="Yes_Click"
                              Content="Yes" />
        <local:MyButtonSimple Grid.Row="1"
                              Margin="20"
                              Click="No_Click"
                              Content="No" />
        <local:MyButtonSimple Grid.Row="2"
                              Margin="20"
                              Click="Cancel_Click"
                              Content="Cancel" />
        <Label x:Name="OutputLabel"
               Grid.Row="3"
               HorizontalAlignment="Center" />
    </Grid>
</Window>
